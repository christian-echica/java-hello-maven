pipeline {
    agent any

    stages {
        stage('Check Environment Versions') {
            steps {
                sh '''
                    echo "Maven Version:"
                    mvn -version
                    echo "Docker Version:"
                    docker --version
                    echo "Java Version:"
                    java -version
                '''
            }
        }

        stage('List Files') {
            steps {
                sh 'ls -l'
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                    echo "Building Docker image..."
                    docker build -t xtian-web-app:1.0.0 .
                '''
            }
        }
    }
}
