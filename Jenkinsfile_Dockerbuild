pipeline {
    agent any

    stages {
        stage('Check Environment Versions') {
            steps {
                // Print Maven, Docker, and Java versions
                sh '''
                    echo "Maven Version:"
                    mvn -version
                    echo "Docker Version:"
                    docker --version
                    echo "Java Version:"
                    java -version
                '''
            }
        }

        stage('List Files') {
            steps {
                // List files in the workspace
                sh 'ls -l'
            }
        }

        stage('Fix Docker Permissions') {
            steps {
                // Change permissions on the Docker socket to allow Jenkins to access Docker
                sh '''
                    echo "Changing permissions on Docker socket..."
                    sudo chmod 777 /var/run/docker.sock
                '''
            }
        }

        stage('Docker Build') {
            steps {
                // Build the Docker image
                sh '''
                    echo "Building Docker image..."
                    docker build -t xtian-web-app:1.0.0 .
                '''
            }
        }

        stage('List Docker Images') {
            steps {
                // List all Docker images
                sh '''
                    echo "Listing all Docker images..."
                    docker images
                '''
            }
        }
    }
}
